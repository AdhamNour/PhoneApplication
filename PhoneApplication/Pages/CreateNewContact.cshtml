@page
@model PhoneApplication.Pages.CreateNewContentModel
@{
    ViewData["Title"] = "Create New Content";
}

<div class="text-center">
    <form method="post" class="card p-3" >
        <div class="row">
            <div asp-validation-summary="All"></div>
        </div>
        <div>
            <label asp-for="NewContact.Name">Name</label>
            <input type="text" asp-for="NewContact.Name" />

        </div>
        <div>
            <label asp-for="NewContact.PhoneNumber">Phone Number</label>
            <input type="number" asp-for="NewContact.PhoneNumber" />
        </div>
        <button class="btn btn-info">Add New Contact</button>
    </form>
</div>